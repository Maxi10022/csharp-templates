@model Template.Api.Users.Emails.Templates.PasswordResetCode

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Your Password Reset Code - @Model.Branding.CompanyName</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; margin: 0; padding: 0; }
        .container { max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { background-color: @Model.Branding.PrimaryColor; color: white; padding: 20px; text-align: center; }
        .content { padding: 20px; background-color: #f9f9f9; }
        .code { 
            font-family: 'Courier New', Courier, monospace;
            font-size: 16px;
            font-weight: normal;
            letter-spacing: 0.5px;
            text-align: left;
            padding: 12px;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin: 20px 0;
            color: #333;
            word-break: break-all;
            white-space: pre;
            line-height: 1.4;
            display: inline-block;
            min-width: 100%;
            box-sizing: border-box;
        }
        .footer { text-align: center; padding: 20px; font-size: 12px; color: #666; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            @if (Model.Branding.LogoUrl is not null)
            {
                <img style="height: 80px; width: auto;" src="@Model.Branding.LogoUrl" alt="Logo"/>
            }
            <h1>@Model.Branding.CompanyName</h1>
        </div>
        <div class="content">
            <h2>Your Password Reset Code</h2>
            <p>We received a request to reset your @Model.Branding.CompanyName account password. Use the following code to reset your password:</p>
            
            <div class="code">@Model.ResetCode</div>
            
            <p>If you did not request a password reset, you can safely ignore this email. Your password will remain unchanged.</p>
            <p>This code will expire in 15 minutes for security reasons.</p>
        </div>
        <div class="footer">
            <p>@Model.Branding.Copyright. All rights reserved.</p>
            <p>This is an automated message, please do not reply to this email.</p>
        </div>
    </div>
</body>
</html>